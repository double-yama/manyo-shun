= form_for @user do |f|
  .field
  = f.label :username, t('label.user_name')
  = f.text_field :username
  br
  br
  = f.label :password, t('label.password')
  = f.password_field :password
  br
  br
  = f.label :password , t('label.password_again')
  = f.password_field :password_confirmation
  br
  br
  = f.label :image, 'プロフィール画像'
  = f.file_field :image

  = f.submit t('label.register')