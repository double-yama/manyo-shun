<h3>ユーザ新規登録画面</h3>

<%= form_for @user, url: login_path do |f| %>

<%= f.label :name %> <br>
<%= f.text_field :name %>
  <br><br>

<%= f.label :email %><br>
<%= f.text_field :email %>
  <br><br>
<%= f.label :パスワード %><br>
<%= f.password_field :password_digest %>
  <br><br>
<%= f.submit '登録' %>
<% end %>