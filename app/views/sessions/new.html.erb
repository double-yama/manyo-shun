<h1>ログイン</h1>

<%= form_for :session, :url => { :controller => :sessions, :action => :create } do |f| %>
  <%= f.label 'ユーザー名' %>
  <%= f.text_field :username %><br><br>
  <%= f.label 'パスワード' %>
  <%= f.password_field :password %><br><br>
  <%= f.submit 'ログイン' %>
<% end %>
<br>
<div>
  <%= link_to '新規登録', signup_path %>
</div>
