<h3>Sign up</h3>

<%= form_for @user, :url => { :controller => :users, :action => :create } do |f| %>
  <div class="field">
  <%= f.label :username, "名前" %>
  <%= f.text_field :username %>
  </div>
  <br><br>
  <%= f.label :password, "PW" %>
  <%= f.password_field :password %><br><br>
  <%= f.label :password  %>
  <%= f.password_field :password_confirmation %><br><br>
  <%= f.submit "登録" %>
<% end %>